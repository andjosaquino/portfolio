%section
  %div.WritingScroll
    %div.WritingScroll-cell
      %div.WritingScroll-meta
      %div.WritingScroll-title
      %div.WritingScroll-desc
%section#trigger
  {% for post in site.posts %}
  %section{:id => "trigger{{post.number}}"}
    %div.Cell
      %div.Cell-container
        %div.Cell-content
          %div.Cell-tag
            %p.small {{ post.type }}
            %p.caption.dark-gray.small
              {{ post.date | date: "%-d %B %Y" }} · Product Design, Prototyping, Visual Design 
          %div.Cell-metaData
            {% if post.type == "Notice" %}
            %div.Notice
              %p.Notice-label.dark-gray.sans-serif
                {{post.title}}
              %p.small
                %span.Tag
                  Mobile UI
                %span.Tag
                  Web UI
                %span.Tag
                  User Experience
                %span.Tag
                  Logo Design
                %span.Tag
                  Graphic Design
              %button{type: "button"}
                Let's work together
            {% else %}
            %div.Article
              %h5.black.bold
                {{post.title}}
              %p.Notice-label.dark-gray.sans-serif
                {{post.description}}
            {% endif %}
        {% if post.type != "Notice" %}
        %div.cell-photo
        {% endif %}
    {% endfor %}
{% include footer.haml %}